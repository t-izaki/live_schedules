<%= form_for performer do |f| %>
  <%= render partial: 'layouts/error_messages', locals: {object: f.object} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :instrument_id %>
    <%= f.collection_select(:instrument_id, Instrument.all, :id, :name, {}, { class: 'form-control' }) %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit submit_button_value, class: 'btn btn-primary' %>
  </div>
<% end %>
