<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>名前</th>
      <th>テーマカラー</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @instruments.each do |inst| %>
      <tr>
        <td><%= inst.id %></td>
        <td><%= inst.name %></td>
        <td>
          <span style="color: <%= inst.color %>">■</span>
          <%= inst.color %>
        </td>
        <td>
          <%= link_to '更新', edit_instrument_path(inst) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
